<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.exjavafx.TableController">
   <children>
      <TableView fx:id="table" layoutX="10.0" layoutY="60.0" prefHeight="331.0" prefWidth="582.0">
         <columns>
            <TableColumn fx:id="cName" prefWidth="225.0" text="Product Name" />
            <TableColumn fx:id="cPrice" minWidth="0.0" prefWidth="131.0" text="Price" />
            <TableColumn fx:id="cQuantity" minWidth="0.0" prefWidth="150.0" text="Quantity" />
         </columns>
      </TableView>
      <TextField fx:id="txtProductName" layoutX="14.0" layoutY="22.0" opacity="0.33" prefHeight="24.0" prefWidth="158.0" promptText="Product Name" />
